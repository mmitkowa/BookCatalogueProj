@model BookwormsHaven.Models.Book

<h2>Book Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>

        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>

        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>

        <!-- Display the image -->
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <!-- Adjust the image path -->
            <img src="~/images/masterandmargarita.jpg" class="img-fluid" alt="Book Image" />
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>